<!DOCTYPE html>
<html>
  <head>
    <title>Monster Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
      <%= link_to "Home", "/" %>
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "All Items", "/items"%>
      <%= link_to "Cart: #{cart.total_items}", "/cart" %>
      <% if current_merchant_user %>
        <%= link_to "Merchant Dashboard", "/merchant" %>
        <%= link_to "Log Out", "/logout" %>
      <% elsif current_user %>
        <%= link_to "My Profile", '/profile' %>
        <%= link_to "Log Out", "/logout" %>
      <% else %>
        <%= link_to "Log In", "/login" %>
        <%= link_to "Register", "/register" %>
      <% end %>
    </nav>
    <% if current_user %>
      <h4>Logged in as <%= current_user.name %></h4>
    <% end %>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
