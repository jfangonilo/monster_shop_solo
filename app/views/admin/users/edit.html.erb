<h2>Update Profile</h2>

<%= form_tag "/admin/users/#{@display_user.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, "#{@display_user.name}" %>

  <%= label_tag :address %>
  <%= text_field_tag :address, "#{@display_user.address}" %>

  <%= label_tag :city %>
  <%= text_field_tag :city, "#{@display_user.city}" %>

  <%= label_tag :state %>
  <%= text_field_tag :state, "#{@display_user.state}" %>

  <%= label_tag :zip %>
  <%= text_field_tag :zip, "#{@display_user.zip}" %>

  <%= label_tag :email %>
  <%= text_field_tag :email, "#{@display_user.email}" %>

  <%= submit_tag "Update Profile" %>
<% end %>