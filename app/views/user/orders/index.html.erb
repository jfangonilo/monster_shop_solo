<h1>Your Orders</h1>

<section class="grid-container" id ="user-orders">
  <% @orders.each do |order| %>
    <section class="grid-item" id = "order-<%= order.id %>">
      <p>Order ID: <%= link_to order.id, "/profile/orders/#{order.id}" %></p>
      <p>Created: <%= order.created_at %></p>
      <p>Updated: <%= order.updated_at %></p>
      <p>Status: <%= order.status.capitalize %></p>
      <p>Total Quantity: <%= order.total_quantity %></p>
      <p>Grand Total: <%= number_to_currency(order.grandtotal/100.to_f) %></p>
    </section>
  <% end %>
</section>